<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DressMe">
    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/aestheticpinksky"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/DressMeTitle"
        android:fontFamily = "cursive"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:textStyle = "bold"
        android:textSize="20sp"

        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/SeasonPrompt"
        android:fontFamily = "sans-serif-thin"
        android:textStyle = "bold"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:layout_marginTop="30dp"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup">

        <RadioButton
            android:id="@+id/FallButton"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="55dp"
            android:text="@string/FallButton"
            android:fontFamily = "sans-serif-medium"
            android:textStyle = "bold"
            android:textColor="@color/white"/>

        <RadioButton
            android:id="@+id/SpringButton"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginStart="10dp"
            android:text="@string/SpringButton"
            android:fontFamily = "sans-serif-medium"
            android:textStyle = "bold"
            android:textColor="@color/white"/>

        <RadioButton
            android:id="@+id/SummerButton"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginStart="10dp"
            android:text="@string/SummerButton"
            android:fontFamily = "sans-serif-medium"
            android:textStyle = "bold"
            android:textColor="@color/white"/>

        <RadioButton
            android:id="@+id/WinterButton"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginStart="10dp"
            android:text="@string/WinterButton"
            android:fontFamily = "sans-serif-medium"
            android:textStyle = "bold"
            android:textColor="@color/white"/>
    </RadioGroup>

    <Button
        android:id="@+id/generateBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="70dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/GenerateButton"
        android:fontFamily = "sans-serif-thin"
        android:textStyle = "bold"
        android:backgroundTint="#A87680"/>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        android:layout_marginTop="190dp"/>

    <Button
        android:id="@+id/scrapbookBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="10dp"
        android:backgroundTint="#A87680"
        android:text="@string/SendScrapbookButton"
        android:fontFamily = "sans-serif-thin"
        android:textStyle = "bold"/>

    <Button
        android:id="@+id/regenerateBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="10dp"
        android:backgroundTint="#A87680"
        android:text="@string/RegenerateButton"
        android:fontFamily = "sans-serif-thin"
        android:textStyle = "bold"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="80dp"
        android:id="@+id/imgLayout">

