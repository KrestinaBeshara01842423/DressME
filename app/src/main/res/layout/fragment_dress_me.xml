<!--            android:id="@+id/genPant"-->
<!--            android:layout_width="200dp"-->
<!--            android:layout_height="200dp"-->
<!--            android:layout_gravity="bottom"-->
<!--            android:src="@drawable/testpants"-->
<!--            android:visibility="invisible" />-->
    </LinearLayout>

</FrameLayout>